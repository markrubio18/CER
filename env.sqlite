# SQLITE CONFIGURATION (Development)
DATABASE_URL="file:./db/custom.db"

# Application Configuration
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-change-in-production-64-characters-long"
NEXTAUTH_DEBUG=true

# Encryption Configuration
ENCRYPTION_KEY="development-key-32-characters-long"

# CA Configuration
CA_COUNTRY="US"
CA_STATE="California"
CA_LOCALITY="San Francisco"
CA_ORGANIZATION="Development CA"
CA_ORGANIZATIONAL_UNIT="IT Department"
CA_COMMON_NAME="Development CA"
CA_EMAIL="ca@dev.local"

# X.509 Certificate Extensions
CA_PATH_LENGTH_CONSTRAINT=0
POLICY_REQUIRE_EXPLICIT=0
POLICY_INHIBIT_MAPPING=0

# CRL and OCSP Configuration
CRL_DISTRIBUTION_POINT="http://localhost:3000/api/crl/download/latest"
OCSP_URL="http://localhost:3000/api/ocsp"
CRL_PUBLICATION_ENDPOINTS=http://localhost:3000/api/crl/download/latest
CRL_UPDATE_INTERVAL_HOURS=24
CRL_RUN_ON_STARTUP=true

# Demo CA Auto Initialization (Dev only)
DEMO_CA_AUTO_INIT=true
DEMO_CA_ALGO=RSA
DEMO_CA_RSA_BITS=2048
DEMO_CA_EC_CURVE=P-256
DEMO_CA_VALIDITY_DAYS=3650
DEMO_CA_SUBJECT_DN="C=US,ST=California,L=San Francisco,O=Demo Organization,OU=Demo CA,CN=Demo Root CA"

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_MAX_AGE=86400
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
PRISMA_LOG=warn,error
LOG_FORMAT=text
LOG_FILE=logs/app.log

# Webhook Configuration
WEBHOOK_DEFAULT_TIMEOUT=10000
WEBHOOK_DEFAULT_RETRIES=3
WEBHOOK_DEFAULT_RETRY_DELAY=1000
WEBHOOK_MAX_RETRY_DELAY=30000