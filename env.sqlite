# SQLite Environment Configuration for Development
# Copy this file to .env when developing locally

# Database Configuration
DATABASE_URL="file:./db/custom.db"

# Application Configuration
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="5f1d5f8a1c2e3a4b5c6d7e8f9a0b1c2d3e4f5a6b7c8d9e0f1a2b3c4d5e6f7a8"
# Optional: enable NextAuth debug logs in dev
NEXTAUTH_DEBUG=true

# Encryption Configuration (32 characters for AES-256)
ENCRYPTION_KEY="e3a7f9c2b1d4e6f8a0c2e4f6a8b0c1d2"

# CA Configuration - Development Defaults
CA_COUNTRY="US"
CA_STATE="California"
CA_LOCALITY="San Francisco"
CA_ORGANIZATION="Development Organization"
CA_ORGANIZATIONAL_UNIT="Development Team"
CA_COMMON_NAME="Development CA"
# UI defaults for CA setup (used by the client-side form)
NEXT_PUBLIC_CA_COUNTRY=US
NEXT_PUBLIC_CA_STATE=California
NEXT_PUBLIC_CA_LOCALITY=San\ Francisco
NEXT_PUBLIC_CA_ORGANIZATION="Development Organization"
NEXT_PUBLIC_CA_ORGANIZATIONAL_UNIT="Development Team"
NEXT_PUBLIC_CA_COMMON_NAME="Development CA"
CA_EMAIL="ca@dev.local"

# X.509 Certificate Extensions (Development settings)
CA_PATH_LENGTH_CONSTRAINT=0
POLICY_REQUIRE_EXPLICIT=0
POLICY_INHIBIT_MAPPING=0

# CRL and OCSP Configuration (Development URLs)
CRL_DISTRIBUTION_POINT="http://localhost:3000/crl"
OCSP_URL="http://localhost:3000/ocsp"
# CRL Scheduler Configuration
CRL_UPDATE_INTERVAL_HOURS=24
CRL_RUN_ON_STARTUP=true

# Email Configuration (Optional - for development testing)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Security Configuration (Development optimized)
BCRYPT_ROUNDS=10  # Reduced for faster development
SESSION_MAX_AGE=86400
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000  # Increased for development

# Logging (Development - verbose)
LOG_LEVEL=debug
# PRISMA_LOG can override LOG_LEVEL for Prisma; leave unset to derive from LOG_LEVEL
# PRISMA_LOG=query,info,warn,error
LOG_FORMAT=text                    # text|json (text is more readable in dev)
LOG_FILE=logs/dev.log              # File logging path (optional)

# Default Admin (development only - CHANGE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
# Optional UI hint (development only; do not set in production)
NEXT_PUBLIC_ADMIN_USERNAME=admin
NEXT_PUBLIC_ADMIN_PASSWORD=admin123

# Feature flags (Development)
ALLOW_EXTENDED_CERT_FORMATS=true  # Allow DER/PKCS#7 uploads for testing